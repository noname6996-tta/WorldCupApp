<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/mg_frame_bg_layout_toolbar">

    <ImageView
        android:id="@+id/mgMagicIvCancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_close_beauty" />

    <ImageView
        android:id="@+id/mgMagicIvTick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_apply_beauty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/segoe_ui_regular"
        android:text="@string/mg_frame_string_frame"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>