<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor">

    <TextView
        android:id="@+id/tvDavMatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="12dp"
        android:autoSizeMaxTextSize="16dp"
        android:autoSizeMinTextSize="13dp"
        android:maxLines="1"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:fontFamily="@font/inter_extrabold"
        android:gravity="left"
        android:text="dasdasda"
        android:textColor="@color/white"
        android:textFontWeight="800"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/tvAllGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAllGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/inter_bold"
        android:padding="6dp"
        android:text="All Groups "
        android:textColor="@color/text_color_yellow"
        android:textSize="13dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recHomeMatch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDavMatch" />

</androidx.constraintlayout.widget.ConstraintLayout>