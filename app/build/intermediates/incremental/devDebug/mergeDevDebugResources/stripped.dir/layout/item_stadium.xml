<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutStadium"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="207dp"
        android:layout_height="118dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgStadium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tvStadiumName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/intermedium"
                android:text="Lusail Iconic"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@+id/tvStadiumLocation"
                app:layout_constraintEnd_toEndOf="@+id/imgStadium"
                app:layout_constraintStart_toStartOf="@+id/imgStadium" />

            <TextView
                android:id="@+id/tvStadiumLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Doha - Qatar"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgStadium"
                app:layout_constraintEnd_toEndOf="@+id/imgStadium"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>