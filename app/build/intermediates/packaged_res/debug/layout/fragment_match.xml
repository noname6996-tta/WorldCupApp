<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgHeader"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@drawable/header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/imgbackGroup"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_baseline_arrow_back_24_maincolor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgHeader" />

            <TextView
                android:id="@+id/tvGroupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="Match  "
                android:textColor="@color/maincolor"
                android:textFontWeight="700"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/imgbackGroup"
                app:layout_constraintTop_toBottomOf="@+id/imgHeader" />

            <View
                android:id="@+id/viewBack"
                android:layout_width="86dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvGroupname"
                app:layout_constraintEnd_toEndOf="@+id/tvGroupname"
                app:layout_constraintStart_toStartOf="@+id/imgbackGroup"
                app:layout_constraintTop_toTopOf="@+id/tvGroupname" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/match_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGroupname" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/fifa_world_cup_2022"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/group_a"
                android:textColor="@color/gray2"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/tvTimeMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:text="@string/time"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <TextView
                android:id="@+id/tvDateMatchGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/sun_nov_20"
                android:textColor="@color/gray2"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/tvTimeMatch"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2" />

            <TextView
                android:id="@+id/tvStadiumMatch"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxWidth="100dp"
                android:maxLines="2"
                android:text="@string/ai_bay_stadium"
                android:textColor="@color/gray2"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/imgTeam2"
                app:layout_constraintStart_toEndOf="@+id/imgteam1"
                app:layout_constraintTop_toBottomOf="@+id/tvTimeMatch" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgteam1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="58dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2" />

            <TextView
                android:id="@+id/tvTeam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/netherlands"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/imgteam1"
                app:layout_constraintStart_toStartOf="@+id/imgteam1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgTeam2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="58dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2" />

            <TextView
                android:id="@+id/tvTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"

                android:fontFamily="@font/inter_bold"
                android:text="@string/netherlands"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/imgTeam2"
                app:layout_constraintStart_toStartOf="@+id/imgTeam2"
                app:layout_constraintBottom_toBottomOf="@+id/view2" />

            <ImageView
                android:id="@+id/imgBell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="14dp"
                android:translationZ="50dp"
                android:src="@drawable/bell_match_faluse"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <com.google.android.material.tabs.TabLayout
                android:layout_marginTop="20dp"
                android:id="@+id/tabLayoutMatch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:scrollbars="horizontal"
                app:tabTextAppearance="@style/tab_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@color/maincolor"
                app:tabIndicatorGravity="bottom"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/maincolor"
                app:tabTextColor="#565656" />
            <View
                android:id="@+id/rulerMatch"
                android:background="#565656"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tabLayoutMatch"
                android:layout_height="1dp"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerMatch"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="900dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rulerMatch" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>